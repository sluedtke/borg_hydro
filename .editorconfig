# See http://editorconfig.org

# top-most EditorConfig file
root = true

# general settings
[*]
charset = utf8
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
max_line_length = 80

# Makefile settings
[Makefile]
indent_style = tab
